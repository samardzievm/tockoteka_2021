@model tockoteka.Models.Blog

@{
    ViewData["Title"] = "Details";
}

<div class="container">
    <img src="@Model.Cover" alt="" width="100%" height="300px">
    <h1 class="display-4 text-center" id="title">@Model.Title</h1>

    <div>
        <strong><i class="fa fa-user" style="width: 20px"></i>  </strong> <span> @Model.Author </span> <br>
        <strong><i class="fa fa-calendar" style="width: 20px"></i> </strong> <span class="datum"> @Model.Date </span>
    </div>
    
    <p style="text-align: justify;" class="mt-2"> @Html.Raw(@Model.Content) </p>
    @*<a asp-action="Index" class="btn btn-dark  mb-3"></a>*@
</div>

<div>
    <a asp-action="Index" class="btn btn-outline-dark pl-3 pr-3"><i class="fa fa-chevron-left"></i></a>
    @*admin actions*@
    @if (User.IsInRole(WC.AdminRole))
    {
        <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-success pl-3 pr-3"><i class="far fa-edit"></i></a>
        <a asp-action="Delete" asp-route-id="@Model.Id" class="btn btn-danger pl-3 pr-3"><i class="far fa-trash-alt"></i></a>
    }
</div>
