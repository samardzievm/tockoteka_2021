@model tockoteka.Models.Blog

@{
    ViewData["Title"] = "Details";
}

<div class="container">
    <div class="row mt-3">
        <div class="col-lg-9 col-md-9 col-sm-12">
            <h1 class="text-center" id="title">@Model.Title</h1>
            <div class="mb-3">
                <p>@*<i class="fa fa-user" style="width: 20px"></i>*@  </p> Објавено од <span> @Model.Author </span> &nbsp; | &nbsp;
                @*<strong><i class="fa fa-calendar" style="width: 20px"></i> </strong>*@ <span class="datum"> @Model.Date </span> &nbsp; | &nbsp;
                <a href="#" class="text-white">
                    <span class="badge badge-dark">
                        @Model.BlogCategory.Name
                    </span>
                </a>
            </div>

            <img src="@WC.BlogImagePath@Model.Cover" alt="" width="100%" height="300px">

            <p style="text-align: justify;" class="mt-2" > @Html.Raw(@Model.Content) </p>
        </div>

        <div class="col-lg-3 col-md-3 col-sm-12 text-center mt-3 mb-3">
            <div class="" style="border: 1px solid black; height: 250px;">
                Место за вашата реклама
            </div>

            <div class="mt-4 " style="border: 1px solid black; height: 100px;">
                Место за вашата реклама
            </div>

            <div class="mt-4 " style="border: 1px solid black; height: 250px;">
                Место за вашата реклама
            </div>
        </div>
    </div>
    

</div>

<div>
    <a asp-action="Index" class="btn btn-outline-dark pl-3 pr-3"><i class="fa fa-chevron-left"></i></a>
    @*admin actions*@
    @if (User.IsInRole(WC.AdminRole))
    {
        <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-success pl-3 pr-3"><i class="far fa-edit"></i></a>
        <a asp-action="Delete" asp-route-id="@Model.Id" class="btn btn-danger pl-3 pr-3"><i class="far fa-trash-alt"></i></a>
    }
</div>

@section Scripts{ 
    <script>
        $(document).ready(function () {
            $("img").addClass("img-responsive");
            $("img").css("max-width", "100%");
        });
    </script>
}
