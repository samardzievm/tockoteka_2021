@model IEnumerable<tockoteka.Models.Blog>

@{
    ViewData["Title"] = "Блогови";
}
@if (User.IsInRole(WC.AdminRole) || User.IsInRole(WC.CustomerRole))
{
    <p>
        <a asp-action="Create" class="btn btn-success mt-2 "><i class="fas fa-plus"></i> Нов блог</a>
    </p>
}

<div class="container">

    <div class="text-center">
        NOT DONE YET...
        <button class="btn btn-dark filter-button" data-filter="all">Сите</button>
        @foreach (var obj in Model)
        {
            <button class="btn btn-outline-secondary filter-button" data-filter="@obj.BlogCategory.Name.Replace(' ','_')">@obj.BlogCategory.Name</button>
        }
    </div>

    <br />

    <div class="row">
        <div class="col-lg-8 col-md-8 col-sm-12">
            @if (Model.Count() == 0)
            {
                <p>Не постојат блогови</p>
            }
            else
            {
                @foreach (var obj in Model)
                {
                    <div class="card mt-3">
                        <a asp-action="Details" asp-route-id="@obj.Id">
                            <img src="@obj.Cover" class="card-img-top" alt="@obj.Title" height="300px">
                        </a>

                        <div class="card-body">
                            <a class="text-decoration-none" asp-action="Details" asp-route-id="@obj.Id">
                                <h4 class="card-title text-primary">  @obj.Title </h4>
                            </a>
                            <p class="card-text"> @obj.Description </p>
                            <p class="card-text">
                                <small class="text-muted">@obj.Date</small> @*&#8226;*@ &nbsp;

                                <a href="#" class="text-white">
                                    <span class="badge badge-dark">
                                        @obj.BlogCategory.Name
                                    </span>
                                </a>

                            </p>
                        </div>
                    </div>
                }
            }

        </div>

        <div class="col-lg-4 col-md-4 col-sm-12 text-center">
            <div class="align-self-end" style="border: 1px solid black; height: 250px;">
                Место за вашата реклама
            </div>

            <div class="mt-4 " style="border: 1px solid black; height: 100px;">
                Место за вашата реклама
            </div>

            <div class="mt-4 " style="border: 1px solid black; height: 250px;">
                Место за вашата реклама
            </div>
        </div>

        @*<partial name="_IndividualBookCard" model="prod" />*@
    </div>

    <nav aria-label="Page navigation example" class="mt-3">
        <ul class="pagination align-self-center">
            <li class="page-item"><a class="page-link" href="#">Претходна</a></li>
            <li class="page-item active"><a class="page-link" href="#">1</a></li>
            <li class="page-item"><a class="page-link" href="#">2</a></li>
            <li class="page-item"><a class="page-link" href="#">3</a></li>
            <li class="page-item"><a class="page-link" href="#">Следна</a></li>
        </ul>
    </nav>

</div>


    @section Scripts {
        <script>
            $(document).ready(function () {
                $(".filter-button").click(function () {
                    var value = $(this).attr('data-filter');
                    if (value == "all") {
                        $('.filter').show('1000');
                    }
                    else {
                        $(".filter").not('.' + value).hide('3000');
                        $('.filter').filter('.' + value).show('3000');
                    }
                });
            });
        </script>
    }


